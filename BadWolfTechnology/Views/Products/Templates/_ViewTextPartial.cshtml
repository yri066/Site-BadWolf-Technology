@{
}

@foreach (var item in Model.items)
{
    if (item.Title is not null)
    {
        <div class="text3">
            <h2>
                @item.Title
            </h2>
        </div>
    }
    if (item.Text is not null)
    {
        <div class="ql-snow">
            <div class="ql-editor">
                <div class="text-content">
                    @Html.Raw(item.Text)
                </div>
            </div>
        </div>
    }
}